<h1>Create a Charity</h1>

<%= form_with model: @charity do |f| %>
  <%= f.label :name, "Name: " %><br>
  <%= f.text_field :name %><br>

  <%= f.label :category, "Category: " %><br>
  <%= f.text_field :category %><br>

  <%= f.label :description, "Description: " %><br>
  <%= f.text_area :description, size: "20x5" %><br>
  
  <%= f.label :rating, "Rating: " %><br>
  <%= f.number_field :rating, in: 1..5 %><br><br>

  <%= f.submit "Create Charity" %>
<% end %>